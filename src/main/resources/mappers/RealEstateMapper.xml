<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.garden.spring.test.mybatis.repository.RealEstateRepository">
 
 	<select id="selectRealEstate" resultType="com.garden.spring.test.mybatis.domain.RealEstate" parameterType="int">
 		SELECT
 			`id`
 			,`realtorId`
 			,`address`
 			,`area`
 			,`type`
 			,`price`
 			,`rentPrice`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 			`id` = #{id};
 	</select>

 	<select id="selectRealEstateListByRentPrice" resultType="com.garden.spring.test.mybatis.domain.RealEstate" parameterType="int">
		SELECT 
			`id`
			, `realtorId`
			, `address`
			, `area`
			, `type`
			, `price`
			, `rentPrice`
			, `createdAt`
			, `updatedAt`
		FROM
			`real_estate`
		WHERE 
			<![CDATA[`rentPrice` < #{rentPrice} ]]>
 	</select>
 	
 	<select id="selectRealEstateListByAreaAndPrice" resultType="com.garden.spring.test.mybatis.domain.RealEstate" parameterType="map">
 		SELECT 
			`id`
			, `realtorId`
			, `address`
			, `area`
			, `type`
			, `price`
			, `rentPrice`
			, `createdAt`
			, `updatedAt`
		FROM
			`real_estate`
		WHERE
			<![CDATA[
			`area` >= #{area}
			AND `price` <= #{price}
			AND `type` = '매매'
			]]>
 			
 	</select>
 	
	<insert id="insertRealEstate" parameterType="com.garden.spring.test.mybatis.domain.RealEstate">
 		INSERT INTO
 			`real_estate`
 		(
 			`realtorId`
 			, `address`
 			, `area`
 			, `type`
 			, `price`
 		)
 		VALUES
 		(
 			#{realtorId}
 			, #{address}
 			, #{area}
 			, #{type}
 			, #{price}
 		)
 	</insert>
 
	<insert id="insertRealEstateByRealtorId" parameterType="map">
	    INSERT INTO 
	    	`real_estate`
	    (
	        `realtorId`,
	        `address`,
	        `area`,
	        `type`,
	        `price`,
	        `rentPrice`
	    )
	    VALUES
	    (
	        #{realtorId},
	        #{realEstate.address},
	        #{realEstate.area},
	        #{realEstate.type},
	        #{realEstate.price},
	        #{realEstate.rentPrice}
	    );
	</insert>
 
</mapper>